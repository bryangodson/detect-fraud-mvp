# Build stage
FROM golang:1.20-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN go build -o /fraud-api ./main.go

# Final image
FROM alpine:3.18
COPY --from=builder /fraud-api /fraud-api
# optional: copy decisions.log if you want
EXPOSE 8080
CMD [ "/fraud-api" ]
